{
  "name": "hwc-monorepo-template",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web & npm run dev:api",
    "dev:web": "npm --workspace=@hwc/web run dev",
    "dev:api": "python -m uvicorn app.main:app --reload --app-dir apps/api",
    "build": "npm --workspace=@hwc/web run build",
    "preview": "npm --workspace=@hwc/web run preview"
  }
}